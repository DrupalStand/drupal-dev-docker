#!/usr/bin/env bash

PARAMS=""
USING_STDIN="t"
PROJECT=${PWD##*/}

# if using stdin then we need to disable tty mode
if [ ! -t 0 ] ; then USING_STDIN=""; fi

for PARAM in "$@"
do
  PARAMS="${PARAMS} \"${PARAM}\""
done
docker exec -i$USING_STDIN cms-$PROJECT sh -c "/var/www/vendor/bin/drush --root=/var/www/web ${PARAMS}"
